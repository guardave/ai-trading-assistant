# AI Trading Assistant - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# TELEGRAM BOT (Required)
# =============================================================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Your Telegram chat ID (send /start to @userinfobot to get it)
TELEGRAM_CHAT_ID=your-chat-id

# =============================================================================
# AI PROVIDERS (At least one required)
# =============================================================================
# xAI Grok API
GROK_API_KEY=

# OpenAI API
OPENAI_API_KEY=

# Anthropic Claude API
ANTHROPIC_API_KEY=

# =============================================================================
# DATA PROVIDERS (Optional but recommended)
# =============================================================================
# EODHD API (paid, recommended for reliability)
EODHD_API_KEY=

# Finnhub API (free tier available)
FINNHUB_API_KEY=

# J-Quants (for Japanese stocks)
JQUANTS_EMAIL=
JQUANTS_PASSWORD=

# =============================================================================
# DATABASE (Production only)
# =============================================================================
# PostgreSQL connection URL
# DATABASE_URL=postgresql://user:password@localhost:5432/trading

# =============================================================================
# CACHE (Production only)
# =============================================================================
# Redis connection URL
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API SECURITY
# =============================================================================
# API key for REST API authentication
API_KEY=your-secure-api-key

# =============================================================================
# DISCORD (Optional)
# =============================================================================
# DISCORD_BOT_TOKEN=
# DISCORD_GUILD_ID=
